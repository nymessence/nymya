{
  "name": "NymyaLang",
  "scopeName": "source.nymya",
  "fileTypes": ["nym", "nymya"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#builtins"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.nymya",
          "begin": "#",
          "end": "$",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.nymya"
            }
          }
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.nymya",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.nymya",
          "match": "\\\\\\(u[0-9A-Fa-f]{4}|n|r|t|\\\\|\\'|\\\")"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.nymya",
          "match": "\\b(import|func|init|class|struct|namespace|var|val|static|export|extern|macro|if|else|elif|while|for|range|return|break|continue|this)\\b"
        },
        {
          "name": "keyword.operator.word.nymya",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "keyword.other.arrow.nymya",
          "match": "->"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.nymya",
          "match": "\\b(Type|Int|Float|String|Char|Bool|Void|List|Any)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.nymya",
          "match": "\\b(length|append|remove|copy|reverse|sort|to_string|to_int|to_float|to_list|range|size|push|pop|top|empty|clear|contains|find|split|join|trim|upper|lower|count|index)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.nymya",
          "begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.nymya"
            },
            "2": {
              "name": "punctuation.definition.parameters.begin.nymya"
            }
          },
          "end": "\\)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.parameters.end.nymya"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.nymya",
          "match": "\\b[0-9]+(\\.[0-9]+)?([eE][+-]?[0-9]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.nymya",
          "match": "\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.assignment.nymya",
          "match": "(=|\\+=|\\-=|\\*=|\\/=|%=)"
        },
        {
          "name": "keyword.operator.comparison.nymya",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.nymya",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.nymya",
          "match": "(&|\\||\\^|~|<<|>>)"
        }
      ]
    }
  }
}