// Test 1: Conditional Branching
// This demonstrates the conditional branching capability required for Turing completeness

import crystal
import math

namespace turing.conditionals {

    func test() -> Void {
        crystal.manifest("=== Conditional Branching Test ===")
        
        var x = 10
        var y = 5
        
        if x > y {
            crystal.manifest("Conditional branch 1 taken: x > y")
        } else {
            crystal.manifest("Conditional branch 2 taken: x <= y")
        }
        
        // Test complex conditionals
        var values = [1, 2, 3, 4, 5]
        for val in values {
            if val % 2 == 0 {
                crystal.manifest(val + " is even")
            } else {
                crystal.manifest(val + " is odd")
            }
        }
        
        // Test nested conditionals
        var a = 7
        var b = 3
        var c = 12
        if a > b {
            if a > c {
                crystal.manifest("a is largest")
            } else {
                crystal.manifest("c is largest")
            }
        } else {
            if b > c {
                crystal.manifest("b is largest")
            } else {
                crystal.manifest("c is largest")
            }
        }
        
        crystal.manifest("=== Conditional Branching Test Complete ===\n")
    }
}

turing.conditionals.test()