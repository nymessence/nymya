// Test Pleiades visualization functionality (without file I/O to avoid parsing issues)
import graphics.ply_basic
import graphics.stl_basic
import math
import crystal

// Test the 3D coordinate transformation functions
class TestStarData {
    var name: String
    var distance_ly: Float
    var ra_deg: Float
    var dec_deg: Float

    init(n: String, dist: Float, ra: Float, dec: Float) {
        self.name = n
        self.distance_ly = dist
        self.ra_deg = ra
        self.dec_deg = dec
    }
}

func main() -> Void {
    crystal.manifest("Testing Pleiades visualization components...")
    
    // Test 3D coordinate transformation
    var pos = graphics.ply_basic.spherical_to_cartesian(45.0, 30.0, 100.0)
    crystal.manifest("3D coordinate transformation test completed")
    
    // Test that we can create a model (without file operations to avoid parsing issues)
    var ply_model = graphics.ply_basic.PlyModel()
    crystal.manifest("PLY model created")
    
    var stl_model = graphics.stl_basic.STLModel()
    crystal.manifest("STL model created")
    
    // Test creating geometric primitives
    ply_model.add_tetrahedron(0.0, 0.0, 0.0, 1.0, 255, 255, 0)
    crystal.manifest("Tetrahedron added to PLY model")
    
    stl_model.add_bar(
        graphics.ply_basic.Point3D(0.0, 0.0, 0.0), 
        graphics.ply_basic.Point3D(5.0, 0.0, 0.0), 
        0.2, 6)
    crystal.manifest("Bar added to STL model")
    
    crystal.manifest("Pleiades visualization components test completed")
}

main()