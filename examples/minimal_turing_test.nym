// Test loop functionality
var count = 0
while (count < 2) {
    count = count + 1
    if (count == 1) {
        crystal.manifest("While loop iteration 1")
    }
    if (count == 2) {
        crystal.manifest("While loop iteration 2")
    }
}

// Test function definition and call with basic parameters
// Avoiding string operations that may trigger compiler bugs
func increment(x: Int) -> Int {
    var result = x + 1
    return result
}

var func_test = increment(1)
if (func_test == 2) {
    crystal.manifest("Basic function call works")
}

// Test recursive structure capability (bounded recursion)
func simple_recursion(depth: Int) -> Int {
    if (depth <= 0) {
        return 0
    } else {
        var new_depth = depth - 1
        return simple_recursion(new_depth)
    }
}

var recursion_test = simple_recursion(2)
if (recursion_test == 0) {
    crystal.manifest("Recursive function works")
}

