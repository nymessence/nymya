// Test basic conditional branching
var test_val = 1
if (test_val == 1) {
    crystal.manifest("Conditional IF statement works")
} else {
    crystal.manifest("ELSE part")
}

// Test basic variable assignment and state change
var state = 0
state = 1
if (state == 1) {
    crystal.manifest("Variable assignment works")
